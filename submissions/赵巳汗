#include <stdio.h>
void bubbleSort(int arr[], int n) 
{
    int i, j, temp;
    for (i = 0; i < n-1; i++) 
    {     
        for (j = 0; j < n-i-1; j++) 
        {
            if (arr[j] > arr[j+1]) 
            {
                temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
    }
}
int main() 
{
    int n, i;
    printf("请输入数字的数量: ");
    scanf("%d", &n);
    int array[n];
    printf("请输入 %d 个数字:\n", n);
    for(i = 0; i < n; i++) 
    {
        scanf("%d", &array[i]);
    }
    bubbleSort(array, n);
    printf("排序后的数组:\n");
    for(i = 0; i < n; i++)
    {
        printf("%d ", array[i]);
    }
    return 0;
}这里用来放提交的任务
